#include <stdio.h>

#define IN 1
#define OUT 0

int main() {
  int c, i, cur_len, state;
  int word_len_count[46];

  c = cur_len = 0;
  state = OUT;
  for (i = 0; i < 11; ++i)
    word_len_count[i] = 0;

  while ((c = getchar() != EOF)) {
    if (c == ' ' || c == '\n' || c == '\t') {
      if (state == IN) {
        ++word_len_count[cur_len];
        cur_len = 0;
        state = OUT;
      }
    }

    ++cur_len;
    state = IN;
  }

  printf("word length histogram\n");
  for (i = 1; i <= 10; ++i) {
    int j;
    printf("%d : ");
    for (j = 1; j < word_len_count[j]; ++j)
      putchar('=');
    putchar('\n');
  }
}